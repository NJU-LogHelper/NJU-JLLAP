<templateSet group="LogHelp">
    <template id="LogHelper-logh"
              name="logh"
              value="$LOGGER$.$LOGMETHOD$&quot;$END$&quot;);"
              description="Logs a trace message"
              toReformat="true"
              toShortenFQNames="true">

        <variable name="LOGGER"
                  expression="resolveLoggerInstance"
                  defaultValue="log"
                  alwaysStopAt="false"/>
        <variable name="LOGMETHOD"
                  expression="resolveLogMethod(LOGGER, &quot;trace&quot;)"
                  defaultValue="trace("
                  alwaysStopAt="false"/>

        <context>
            <option name="JAVA_CODE" value="true"/>
            <option name="JAVA_COMMENT" value="false"/>
            <option name="JAVA_STRING" value="false"/>
            <option name="XML" value="false"/>
            <option name="HTML" value="false"/>
            <option name="JSP" value="false"/>
            <option name="COMPLETION" value="false"/>
            <option name="GROOVY" value="false"/>
            <option name="OTHER" value="false"/>
        </context>
    </template>

